{
  "name": "Daily Email & Social Media Digest",
  "nodes": [
    {
      "id": "trigger",
      "name": "Daily Schedule",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1,
      "position": [250, 300],
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "hours",
              "hoursInterval": 24,
              "triggerAtHour": 8
            }
          ]
        }
      }
    },
    {
      "id": "gmail",
      "name": "Get Gmail Messages",
      "type": "n8n-nodes-base.gmail",
      "typeVersion": 2,
      "position": [450, 200],
      "parameters": {
        "operation": "getAll",
        "returnAll": false,
        "limit": 50,
        "filters": {
          "query": "is:unread newer_than:1d"
        }
      },
      "credentials": {
        "gmailOAuth2": {
          "id": "gmail_credentials",
          "name": "Gmail Account"
        }
      }
    },
    {
      "id": "twitter",
      "name": "Get Twitter Mentions",
      "type": "n8n-nodes-base.twitter",
      "typeVersion": 1,
      "position": [450, 300],
      "parameters": {
        "operation": "getMentions",
        "returnAll": false,
        "limit": 50,
        "additionalFields": {}
      },
      "credentials": {
        "twitterOAuth2": {
          "id": "twitter_credentials",
          "name": "Twitter Account"
        }
      }
    },
    {
      "id": "linkedin",
      "name": "Get LinkedIn Notifications",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [450, 400],
      "parameters": {
        "url": "https://api.linkedin.com/v2/notifications",
        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "linkedInOAuth2",
        "method": "GET",
        "options": {}
      },
      "credentials": {
        "linkedInOAuth2": {
          "id": "linkedin_credentials",
          "name": "LinkedIn Account"
        }
      }
    },
    {
      "id": "merge",
      "name": "Merge All Messages",
      "type": "n8n-nodes-base.merge",
      "typeVersion": 2,
      "position": [650, 300],
      "parameters": {
        "mode": "combine",
        "combinationMode": "mergeByPosition",
        "options": {}
      }
    },
    {
      "id": "analyze",
      "name": "AI Analysis",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4,
      "position": [850, 300],
      "parameters": {
        "url": "https://api.openai.com/v1/chat/completions",
        "authentication": "predefinedCredentialType",
        "nodeCredentialType": "openAiApi",
        "method": "POST",
        "sendBody": true,
        "bodyContentType": "json",
        "jsonBody": "={\n  \"model\": \"gpt-4\",\n  \"messages\": [\n    {\n      \"role\": \"system\",\n      \"content\": \"You are an AI assistant that analyzes emails and social media messages to identify important items and create a summary.\"\n    },\n    {\n      \"role\": \"user\",\n      \"content\": \"Analyze these messages and identify important items:\\n\\n{{ JSON.stringify($json) }}\\n\\nProvide:\\n1. Executive summary\\n2. High priority items\\n3. Action items\\n4. Platform breakdown\"\n    }\n  ],\n  \"temperature\": 0.3,\n  \"max_tokens\": 1000\n}"
      },
      "credentials": {
        "openAiApi": {
          "id": "openai_credentials",
          "name": "OpenAI API"
        }
      }
    },
    {
      "id": "slack",
      "name": "Send to Slack",
      "type": "n8n-nodes-base.slack",
      "typeVersion": 2,
      "position": [1050, 300],
      "parameters": {
        "operation": "postMessage",
        "channel": "#daily-digest",
        "text": "=ðŸ”” *Daily Communication Digest*\\n\\n{{ $json.choices[0].message.content }}",
        "otherOptions": {
          "mrkdwn": true
        }
      },
      "credentials": {
        "slackOAuth2": {
          "id": "slack_credentials",
          "name": "Slack Workspace"
        }
      }
    }
  ],
  "connections": {
    "trigger": {
      "main": [
        [
          { "node": "gmail", "type": "main", "index": 0 },
          { "node": "twitter", "type": "main", "index": 0 },
          { "node": "linkedin", "type": "main", "index": 0 }
        ]
      ]
    },
    "gmail": {
      "main": [[{ "node": "merge", "type": "main", "index": 0 }]]
    },
    "twitter": {
      "main": [[{ "node": "merge", "type": "main", "index": 1 }]]
    },
    "linkedin": {
      "main": [[{ "node": "merge", "type": "main", "index": 2 }]]
    },
    "merge": {
      "main": [[{ "node": "analyze", "type": "main", "index": 0 }]]
    },
    "analyze": {
      "main": [[{ "node": "slack", "type": "main", "index": 0 }]]
    }
  },
  "active": false,
  "settings": {
    "executionOrder": "v1"
  }
}